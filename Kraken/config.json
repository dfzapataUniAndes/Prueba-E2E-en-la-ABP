{
  "reporter": "spec",
  "stepDelay": 500,
  "scenarios": [
    {
      "path": "./features",
      "platform": "desktop",
      "browser": "chrome",
      "version": "latest"
    }
  ],
  "featureToTest": "members",
  "vrt": true,
  "ghostBaseUrl": "http://localhost:2368/ghost/",
  "ghostRcUrl": "http://localhost:2369/ghost/",
  "browsers":["chromium"],
  "options":{
    "output": {
      "errorColor": {
        "red": 0,
        "green": 255,
        "blue": 255
      },
      "errorType": "movement",
      "largeImageThreshold": 1200,
      "useCrossOrigin": false,
      "outputDiff": true
    },
    "scaleToSameSize": true,
    "ignore": "antialiasing"
  },
  "viewportHeight":600,
  "viewportWidth":800
}
